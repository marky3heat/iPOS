@{
    ViewBag.Tag = "Brand";
    ViewBag.Title = "iPOS: Brand";
}

<div data-bind="visible: isShowedListBrand" class="col-md-6">
    <div class="panel panel-flat">
        <div class="panel-heading">
            <h6 class="panel-title">Brand List</h6>
            <div class="heading-elements">
                <button data-bind="click: addBrand" type="submit" class="btn bg-orange-400 btn-labeled btn-labeled-right ml-10"><b><i class="icon-plus3"></i></b>Create new brand</button>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table text-nowrap" id="brandTable">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Brand</th>
                        <th class="text-center"><i class="icon-arrow-down12"></i></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<div data-bind="visible: isShowedBrand" class="panel panel-flat col-md-6">
    <div class="panel-heading">
        <h6 class="panel-title">New Brand</h6>
        <div class="heading-elements">
            <button data-bind="click: backToList" type="submit" class="btn btn-link"><i class="text-orange-600 icon-arrow-left13 position-left"></i> Back to list</button>
        </div>
    </div>
    <div class="panel-body">
        <form action="#">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-12">
                        <label>Brand description</label>
                        <input type="text" data-bind="textinput: modelBrand.brand_desc" class="form-control" id="brand_desc">
                    </div>
                </div>
            </div>

            <div class="text-right">
                <button data-bind="click: saveBrand" type="submit" class="btn bg-teal-400 btn-labeled btn-labeled-right ml-10"><b><i class="icon-plus3"></i></b><!--ko text: buttonSaveCaption--><!--/ko--></button>
            </div>
        </form>
    </div>
</div>

@section scripts{
    <script src="~/Areas/Administrator/Assets/Model/reference.model.js"></script>
    <script src="~/Areas/Administrator/Assets/ViewModel/reference.viewmodel.js"></script>
}